<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Listado de Libros</h3>
  </div>
  <div class="panel-body">

    <table class="table">
      <thead>
        <tr>
          <th>Isbn</th>
          <th>Título</th>
          <th>Cantidad de Ejemplares</th>
          <th>Autor</th>
          <th>Editorial</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.book_isbn %></td>
            <td><%= book.book_titulo %></td>
            <td><%= book.book_cantidad_ejemplares %></td>
            <td><%= book.book_autor %></td>
            <td><%= book.editorial.editorial_razon_social %></td>
            <td><%= link_to 'Detalle', book %></td>
            <td><%= link_to 'Modificar', edit_book_path(book) %></td>
            <td><%= link_to 'Eliminar', book, method: :delete, data: { confirm: '¿Estás seguro que deseas eliminar este registro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nuevo Libro', new_book_path %>
    </div>
  </div>
